<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart_activitiy">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:text="Credit cart information"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold">

    </TextView>
    <EditText
        android:id="@+id/cartNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:hint="Enter your cart number"
        android:textAlignment="textStart"
        android:layout_marginTop="100dp">

    </EditText>

    <EditText
        android:id="@+id/cartDate"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="DATE mm/yy"
        android:inputType="datetime"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartNumber"


        ></EditText>

    <EditText
        android:id="@+id/cartSecurityNumber"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="CVV"
        android:inputType="number"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/cartDate"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/cartNumber"></EditText>
    <Button
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cartDate"
        android:layout_marginTop="100dp"
        android:text="PAY"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>




